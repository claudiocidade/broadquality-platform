<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="webDriverManager" class="main.java.com.framework.configuration.model.serialization.WebDriverManager" >
        <constructor-arg value="CHROME" type="main.java.com.framework.test.selenium.DriverFactory.DriverType" />
    </bean>
    <bean id="applicationSettingsSerializer" class="main.java.com.framework.configuration.model.serialization.ApplicationSettingsSerializer" >
        <constructor-arg value="YAML" type="main.java.com.framework.serialization.ObjectSerializer.DataFormat" />
    </bean>
    <bean id="fieldSettingsSerializer" class="main.java.com.framework.configuration.model.serialization.FieldSettingsSerializer">
        <constructor-arg value="JSON" type="main.java.com.framework.serialization.ObjectSerializer.DataFormat" />
    </bean>
    <bean id="testPlanSerializer" class="main.java.com.framework.configuration.model.serialization.TestPlanSerializer">
        <constructor-arg value="JSON" type="main.java.com.framework.serialization.ObjectSerializer.DataFormat" />
    </bean>
    <bean id="configurationManager" class="main.java.com.framework.configuration.ConfigurationManager">
        <constructor-arg ref="applicationSettingsSerializer" />
        <constructor-arg ref="fieldSettingsSerializer" />
    </bean>
    <bean id="executionContext" class="main.java.com.framework.test.ExecutionContext">
        <constructor-arg ref="configurationManager" />
        <constructor-arg ref="webDriverManager" />
        <constructor-arg ref="testPlanSerializer" />
    </bean>
</beans>